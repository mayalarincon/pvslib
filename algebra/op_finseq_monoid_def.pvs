op_finseq_monoid_def[T:Type+,*:[T,T->T],one:T]: THEORY

  BEGIN

  fs: VAR finseq[T]

   op_fseq(fs): RECURSIVE T =
   		    	IF length(fs) = 0 THEN one
                           ELSE seq(fs)(0) * op_fseq(fs^(1,length(fs)-1))
                        ENDIF
			MEASURE length(fs)
			
  END op_finseq_monoid_def
 

